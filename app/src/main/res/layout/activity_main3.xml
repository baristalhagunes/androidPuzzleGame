            android:textSize="40sp"


            />

        <Button
            android:id="@+id/btn8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/yuvarlak_button_tasarim"
            android:text="A"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/btn9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/yuvarlak_button_tasarim"
            android:text="N"
            android:textSize="40sp"

            />
    </GridLayout>


    <Button
