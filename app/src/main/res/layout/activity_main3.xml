            android:background="@drawable/crossword_button_tasarim"
            android:text=""
            />
        <Button
            android:id="@+id/btn11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/crossword_button_tasarim"
            android:text=""
            />

        <Button
            android:id="@+id/btn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/crossword_button_tasarim" />
        android:text=""


        <Button
            android:id="@+id/btn3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/crossword_button_tasarim" />
        android:text=""

        <Button
            android:id="@+id/btn4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/crossword_button_tasarim" />
        android:text=""

        <Button
            android:id="@+id/btn5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/crossword_button_tasarim" />
        android:text=""
    </GridLayout>

    <GridLayout
        android:id="@+id/mg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:columnCount="3"
        android:foregroundGravity="center"
        android:rowCount="3">


        <Button
            android:id="@+id/btn7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/yuvarlak_button_tasarim"
